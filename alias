# common alias file, add some work-alias as need.

alias djserver="python manage.py runserver 0.0.0.0:8000"
alias djshell="python manage.py shell"
alias mmplay="cd ~/Music && mplayer -playlist mplay.lst -loop 0"
alias cdchat="cd ~/projects/next_chat"
alias cdnchat="cd ~/projects/next_chat/nchat"
alias ssh241="ssh root@192.168.1.241"

# xclip
alias xclip="xclip -selection clipboard"

alias sslstart="cd ~/app/shadowsocks && sslocal -d start -c vultr.json --pid-file vultr.pid --log-file vultr.log"
alias xmodm="xmodmap ~/.xmodmap"
alias hsandbox="~/app/hsandbox/hsandbox"
alias spacevim="nyaovim -u ~/.SpaceVim/init.vim"
alias ngvim="nyaovim -u ~/hr-conf/hr-gvim-conf/nvim_init.vim"
alias spacemacs="HOME=~/app/spacemacs emacs"
alias racket_repl="racket -i -p neil/sicp -l xrepl"
alias open="xdg-open"
