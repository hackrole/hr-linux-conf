####################
set mbox_type   = Maildir
set folder = /home/daipeng/Mails/bigsec
set spoolfile   = "+INBOX"
set mbox        = "+archive"
set postponed   = "+drafts"
set editor="vim"
set include=yes
set indent_str="> "
set from='hackrole <daipeng123456@gmail.com>'
set use_from=yes
set envelope_from=yes
set realname='daipeng'
set reverse_name=yes
set reverse_realname=yes

unset record

set sendmail    = /usr/bin/msmtp

# mailboxes
mailboxes +INBOX +archive +sent +drafts +spam +trash

# html view
auto_view text/html
alternative_order text/plain text/enriched text/html
